@theme "/dev/null"

configuration {
	modi: "drun";
	drun-display-format: "{name}";
	show-icons: true;
	font: "sans bold 11";
}

* {
	light1: #b6beca;
	light2: #929aa6;
	dark1: #101419;
	dark2: #1c252c;
	blue: #70a5eb;
}

window {
	width: 549px;
    height: 549px;
	padding: 15px;
	spacing: 15px;
	children: [ inputbar, listview ];
	background-color: @dark1;
	border-radius: 10px;
	border: 2px;
	border-color: @blue;
}

inputbar {
	children: [ textbox, entry ];
    background-color: @dark2;
    padding: 8px 10px;
	spacing: 10px;
    border-radius: 5px;
}

textbox {
	str: "ï€‚";
	font: "Inter 14";
	width: 20px;
	text-color: @light2;
	background-color: inherit;
    expand: false;
}

entry {
    placeholder: "Search";
	text-color: @light1;
    background-color: inherit;
    placeholder-color: @light2;
	vertical-align: 0.5;
}

listview {
	background-color: @dark1;
	cycle: false;
}

element {
	background-color: inherit;
    padding: 10px;
	spacing: 10px;
    border-radius: 5px;
}

element-text {
	text-color: @light1;
}

element selected {
	text-color: @dark1;
    background-color: @blue;
}

element-text selected {
	text-color: @dark1;
}

element-icon {
	size: 20px;
}

element-text {
	vertical-align: 0.5;
	highlight: none;
}

element-icon, element-text {
	background-color: inherit;
}
